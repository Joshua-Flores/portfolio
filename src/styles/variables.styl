html
  --base-font-size 16px

body
  --bg-color hsla(0,0%,7%,1)
  --bg-content-color hsla(0,0%,5%,1)
  --title-color #fff
  --body-color #ced8de
  --primary-color hsla(38,100%,64%,1)
  --secondary-color #FFF
  --disabled-color #888
  --radius 6px
  --space 3.5rem
  --header-height 80px
  --content-width 860px
  --transition-fast 0.2s
  --transition-normal 0.4s
  --transition-slow 0.6s
  --bg-code rgba(0, 0, 0, 0.3)
  --border-color rgba(255, 255, 255, 0.1)

@media screen and (max-width 650px)
  html
    --base-font-size 16px

  body
    --space 1.5rem
    --header-height 60px
